<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp">

    <ImageView
        android:id="@+id/floatingCoverImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground" />

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/floatingCoverImageView"
        android:orientation="vertical">

        <TextView
            android:id="@+id/floatingMusicNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音乐社区 听我想听~"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/floatingAuthorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="列表暂无歌曲"
            android:textColor="@color/grey"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/floatingPlayPauseButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="16dp"
        android:layout_toStartOf="@id/floatingPlaylistButton"
        android:src="@drawable/play_light" />

    <ImageView
        android:id="@+id/floatingPlaylistButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/list_light" />
</RelativeLayout>
